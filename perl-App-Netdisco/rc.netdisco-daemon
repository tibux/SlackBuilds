#!/bin/bash

USER=netdisco

netdisco_start()
{
  su - $USER -c "export PERL_LOCAL_LIB_ROOT=/usr/lib64/perl5; /usr/bin/netdisco-daemon start"
}

netdisco_stop()
{
  su - $USER -c "export PERL_LOCAL_LIB_ROOT=/usr/lib64/perl5; /usr/bin/netdisco-daemon stop"
}

netdisco_restart()
{
  netdisco_stop
  netdisco_start
}

case $1 in
'start')
  netdisco_start
  ;;
'stop')
  netdisco_stop
  ;;
'restart')
  netdisco_restart
  ;;
*)
  echo "usage $0 start|stop|restart"
esac
